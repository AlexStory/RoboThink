<Window x:Class="RoboThink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Horizontal" Height="350" Width="525" Background="#FFDBDADA">
        <StackPanel Height="350" Width="100" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="right">
            <Button Name="NSS" Width="100" Height="25" BorderThickness="0,2,10,2" BorderBrush="#FFDBDADA" Click="NSS_Click">NSS Prework</Button>
            <Button Name="VIM" Width="100" Height="25" BorderThickness="0,2,10,2" BorderBrush="#FF707070" Click="VIM_Click">Learn Vim</Button>
            <Button Name="GIT" Width="100" Height="25" BorderThickness="0,2,10,2" BorderBrush="#FF707070" Click="GIT_Click">Learn Git</Button>

            <Rectangle Width="10" Height="325" HorizontalAlignment="Right" Fill="#FF707070"></Rectangle>
        </StackPanel>
        <StackPanel Height="350" Width="425">
            <ProgressBar Width="369" Height="20" Margin="0,0,0,0"/>
            <StackPanel Width="425" Height="330">
                
            </StackPanel>
        </StackPanel>

    </StackPanel>
</Window>
